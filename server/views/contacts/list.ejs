<% include ../partials/header.ejs %>

<% include ../partials/main_nav.ejs %>

    <main class="container">
        <div class="row">
            <div class="col-md-offset-3 col-md-6">
                <h1><%= title %></h1>
                <a href="/contacts/add" class="btn btn-primary" role="button">
                <i class="fas fa-plus-circle"></i> Add a Contact</a>
                <br>
                <table class="table table-bordered table-striped table-hover">
                    <tr>
                        <th class="text-center col-2">Contact Name</th>
                        <th class="text-center col-2">Contact Number</th>
                        <th class="text-center col-2">Contact Email</th>
                        <th class="text-center col-1"></th>
                        <th class="text-center col-1"></th>
                    </tr>

                    <% for(let count = 0; count < ContactList.length; count++) {%>
                        <tr>
                            <td class="text-center col-2"><%= ContactList[count].name></td>
                            <td class="text-center col-2"><%= ContactList[count].phone></td>
                            <td class="text-center col-2"><%= ContactList[count].email></td>
                            <td class="text-center col-1">
                                <a href="/contacts/edit/<%= ContactList[count]._id%>" class="btn btn-primary btn-sm">
                                <i class="fas fa-pencil-alt"></i> Edit</a>
                            </td>
                            <td class="text-center col-1"><a href="/contacts/delete/<%= ContactList[count]._id%>" class="btn btn-primary btn-sm">
                                <i class="fas fa-trash-alt"></i> Delete</a>
                            </td>
                        </tr>
                    <% } %>
                </table>
            </div>
        </div>
    </main>

<% include ../partials/footer.ejs %>