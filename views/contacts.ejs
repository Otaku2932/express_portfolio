<% include partials/header.ejs %>

<% include partials/main_nav.ejs %>

    <main class="container">
        <div class="row">
            <div class="col-md-offset-3 col-md-6">
                <h1><%= title %></h1>
                <br>
                <table class="table table-bordered table-striped table-hover">
                    <tr>
                        <th class="text-center">Contact Name</th>
                        <th class="text-center">Contact Number</th>
                        <th class="text-center">Contact Email</th>
                    </tr>

                    <% for(let count = 0; count < ContactList.length; count++) {%>
                        <tr>
                            <td class="text-center"><%= ContactList[count].name></td>
                            <td class="text-center"><%= ContactList[count].phone></td>
                            <td class="text-center"><%= ContactList[count].email></td>
                        </tr>
                    <% } %>
                </table>
            </div>
        </div>
    </main>

<% include partials/footer.ejs %>